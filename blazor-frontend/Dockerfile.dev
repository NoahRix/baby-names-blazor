FROM mcr.microsoft.com/dotnet/sdk:9.0 AS development
WORKDIR /app

# Copy project files and restore
COPY blazor-frontend.csproj .
RUN dotnet restore

# Copy everything
COPY . .

EXPOSE 5174

# Use dotnet watch for hot reload
ENTRYPOINT ["dotnet", "watch", "run", "--non-interactive", "--urls", "http://0.0.0.0:5174"]

